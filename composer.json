{
  "name": "scripturadesign/markov",
  "type": "library",
  "description": "Markov Chain",
  "keywords": [
    "markov chain"
  ],
  "homepage": "https://github.com/scripturadesign/markov",
  "license": "MIT",
  "authors": [
    {
      "name": "Martin Dilling-Hansen",
      "email": "martindilling@gmail.com",
      "homepage": "http://martindilling.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^7.4|^8.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.3.2",
    "phpunit/phpunit": "^9.5",
    "vimeo/psalm": "^4.13.1"
  },
  "autoload": {
    "psr-4": {
      "Scriptura\\Markov\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Scriptura\\Markov\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "psalm": "vendor/bin/psalm",
    "test": "vendor/bin/phpunit",
    "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
    "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
